def register():  #creates an account with a None as the votes, puts it in voterDict
    global ID
    ID = str(IDgen())
    IDlabel = tk.Label(root, text='Your Id is '+ID)
    IDlabel.place(x=10, y=100)
    registerButton.place_forget()

def vote(): #sets their votes to the list
    vote= clicked.get()
    id = ID
    if id==None:
        error()
